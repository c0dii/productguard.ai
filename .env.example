# ============================================================================
# ProductGuard.ai - Environment Variables Template
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Supabase
# ----------------------------------------------------------------------------
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=demo
NEXT_PUBLIC_SUPABASE_ANON_KEY=demo
SUPABASE_SERVICE_ROLE_KEY=demo
# ----------------------------------------------------------------------------
# Stripe
# ----------------------------------------------------------------------------
# Get these from your Stripe dashboard:
# https://dashboard.stripe.com/test/apikeys

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs (create products/prices in Stripe dashboard)
STRIPE_PRICE_STARTER=price_xxxxx
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRICE_BUSINESS=price_xxxxx

# ----------------------------------------------------------------------------
# App Configuration
# ----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Email (Resend) - Optional for Phase 1
# ----------------------------------------------------------------------------
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxx

# ----------------------------------------------------------------------------
# Scan APIs - Optional for Phase 1 (stubs implemented)
# ----------------------------------------------------------------------------
# These will be needed in Phase 2 for real scanning functionality

# SerpAPI (Google Search monitoring)
# Get API key from: https://serpapi.com/manage-api-key
SERPAPI_KEY=xxxxx

# Telegram Bot API
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=xxxxx
TELEGRAM_API_ID=xxxxx
TELEGRAM_API_HASH=xxxxx

# WHOIS API (for hosting provider identification)
WHOIS_API_KEY=xxxxx

# Google URL Removal API (optional)
# GOOGLE_API_KEY=xxxxx
